<h1>Productos</h1>

<div id="productList">
  {{#each products}}
    <div class="card">
      <img src="{{thumbnail}}" alt="{{title}}">
      <div class="card-content">
        <h3>{{title}}</h3>
        <p>{{description}}</p>
        <p><strong>Precio:</strong> ${{price}}</p>
        <p><strong>Stock:</strong> {{stock}}</p>
        <button onclick="deleteProduct({{id}})">ðŸ—‘ Eliminar</button>
      </div>
    </div>
  {{/each}}
</div>
